<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <% include ./commonCss.ejs %>
    <link rel='stylesheet' href='/stylesheets/tooltip.css' />
    <% include ./analytics.ejs %>
  </head>
  <body>

    <header>
      <% include ./header.ejs %>
    </header>

    <main class="container" role="main">
        <div id="div-list" class="filepath div_first">

        <% var pathKeys = Object.keys(scheme); %>
        <% if(pathKeys.length > 0){ %>
          <% pathKeys.forEach(function(pathKey, index) { %>
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-card-header" data-toggle="collapse" data-target="#<%= pathKey %>" aria-expanded="false" aria-controls="collapseOne" style="width: 90%;text-align: left;">
                    <i class="collapse-button-show material-icons">expand_less</i>
                    <%= pathKey %>
                  </button>
                  <button onclick="addButton(event, '<%= pathKey %>');" class="btn btn-info btn-sm mobile-display-none" style="float: right; padding: 5px 10px; margin: 5px 0;">Add</button>
                </h5>
              </div>

              <div id="<%= pathKey %>" class="table-responsive collapse show">
                <table class="table table-striped table-sm card-body">
                  <colgroup>
                    <col style="width:100%">
                  </colgroup>
                  <thead>
                  </thead>
                  <tbody>
                    <% var nameKeys = Object.keys(scheme[pathKey]); %>
                    <% if(nameKeys.length > 0){ %>
                      <% nameKeys.forEach(function(nameKey) { %>
                        <tr>
                          <td>
                            <form method="POST" class="mobile-display-none">
                                <input type="hidden" name="delete" value="true">
                                <input type="hidden" name="path" value="<%= pathKey %>">
                                <input type="hidden" name="name" value="<%= scheme[pathKey][nameKey].name %>">
                                <input type="hidden" name="uri" value="<%= scheme[pathKey][nameKey].uri %>">
                                <textarea style="display : none;"><%= scheme[pathKey][nameKey].desc %></textarea>
                              <button type="submit" onclick="deleteButton(event);" class="btn btn-danger btn-sm" style="float: right; padding: 5px 10px; margin: 5px 0px 5px 10px;">Delete</button>
                            </form>
                            <button onclick="editButton(event);" class="btn btn-dark btn-sm btn-show-div-edit mobile-display-none" style="float: right; padding: 5px 10px; margin: 5px 0;">Edit</button>
                            <div class="">
                              <% if(scheme[pathKey][nameKey].desc){ %>
                              <div class="tooltip-area">
                                <button onclick="tooltipButton(event);" class="tooltipbtn btn btn-outline-dark btn-sm" style="height: 16px;padding: 0px 5px;margin: 4px 5px 4px 0px;float: left;font-size: 10px;}"><span>설명&nbsp;</span><i class="material-icons float-right">help</i></button>
                                <textarea class="tooltiptext tooltiptext-visible" readonly><%= scheme[pathKey][nameKey].name %> : &#10;&#10;<%= scheme[pathKey][nameKey].desc %></textarea>
                              </div>
                              <% } %>
                              <span style="margin:0;"><%= scheme[pathKey][nameKey].name %></span><br>
                              <a href="<%= scheme[pathKey][nameKey].uri %>" target="_blank" style="overflow: hidden; word-break: break-all;"><%= scheme[pathKey][nameKey].uri %></a>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          <% }); %>
        <% } %>
        </div>


        <div id="div-edit" class="jumbotron json-edit mobile-display-none">
          <button type="button" id="btn-close-json-edit" class="btn btn-secondary" style="position: absolute; top: 20px; right: 32px;">X</button>
          <form method="POST">
            <div class="form-group">
              <label for="path">분류 :</label>
              <input type="text" class="form-control" id="path" name="path" required>
            </div>
            <div class="form-group">
              <label for="name">명칭 :</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="uri">URI :</label>
              <input type="text" class="form-control" id="uri" name="uri" required>
            </div>
            <div class="form-group">
              <label for="desc">설명 :</label>
              <textarea class="form-control" id="desc" name="desc" rows="20"></textarea>
            </div>
            <button type="submit" class="btn btn-secondary" style="float: right;">SAVE</button>
          </form>
        </div>
    </main>
    </body>

    <% include ./commonScript.ejs %>
    <script src="/javascripts/scheme.js"></script>
</html>
