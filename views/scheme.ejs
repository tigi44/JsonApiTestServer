<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <% include ./common/commonCss.ejs %>
    <link rel='stylesheet' href='/stylesheets/common.css' />
    <link rel='stylesheet' href='/stylesheets/tooltip.css' />
    <% include ./common/analytics.ejs %>
  </head>
  <body>

    <header>
      <% include ./common/header.ejs %>
    </header>

    <main class="container" role="main">
      <%- cardHtml %>

      <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">EDIT JSON</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <form method="POST">
                <div class="form-group">
                  <label for="path">분류 :</label>
                  <input type="text" class="form-control" id="path" name="path" required>
                </div>
                <div class="form-group">
                  <label for="name">명칭 :</label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                  <label for="uri">URI :</label>
                  <input type="text" class="form-control" id="uri" name="uri" required>
                </div>
                <div class="form-group">
                  <label for="desc">설명 :</label>
                  <textarea class="form-control" id="desc" name="desc" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary btn-right">SAVE</button>
              </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
              <div class="btn-group">
                <button onclick="validateJsonButton(event);" class="btn btn-success">VALIDATE</button>
                <button class="btn btn-info" type="button" onclick="addJsonButton(event);">ADD</button>
              </div>
            </div>

          </div>
        </div>
      </div>

    </main>
    </body>

    <% include ./common/commonScript.ejs %>
    <script src="/javascripts/commonCard.js"></script>
    <!-- <script src="/javascripts/scheme.js"></script> -->
</html>
