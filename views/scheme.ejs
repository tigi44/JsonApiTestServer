<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="/javascripts/jsoneditor/dist/jsoneditor.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/styleIndex.css' />
  </head>
  <body>

    <header>
      <% include ./header.ejs %>
    </header>

    <main class="container" role="main">
        <div id="div-list" class="filepath div_first">

        <% var pathKeys = Object.keys(scheme); %>
        <% if(pathKeys.length > 0){ %>
          <% pathKeys.forEach(function(pathKey) { %>
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-card-header" data-toggle="collapse" data-target="#<%= pathKey %>" aria-expanded="false" aria-controls="collapseOne">
                    <%= pathKey %>
                  </button>
                </h5>
              </div>

              <div id="<%= pathKey %>" class="table-responsive collapse show">
                <table class="table table-striped table-sm card-body">
                  <colgroup>
                    <col style="width:100%">
                  </colgroup>
                  <thead>
                  </thead>
                  <tbody>
                    <% var nameKeys = Object.keys(scheme[pathKey]); %>
                    <% if(nameKeys.length > 0){ %>
                      <% nameKeys.forEach(function(nameKey) { %>
                        <tr>
                          <td>
                            <p style="margin:0;"><%= scheme[pathKey][nameKey].name %></p>
                            <a href="<%= scheme[pathKey][nameKey].scheme %>" target="_blank"><%= scheme[pathKey][nameKey].scheme %></a>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          <% }); %>
        <% } %>


        </div>
        <div id="div-edit" class="jumbotron json-edit scheme-edit">
          <form method="POST">
            <div class="form-group">
              <label for="path">분류 :</label>
              <input type="text" class="form-control" id="path" name="path">
            </div>
            <div class="form-group">
              <label for="name">명칭 :</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
              <label for="scheme">scheme :</label>
              <input type="text" class="form-control" id="scheme" name="scheme">
            </div>
            <button type="submit">submit</button>
          </form>
        </div>
    </main>
    </body>

    <% include ./commonScript.ejs %>
    <script src="/javascripts/scheme.js"></script>
</html>
